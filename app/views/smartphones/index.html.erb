<% content_for :body do %>
<div class="container" style="margin-top: 336px;">
  <p id="notice"><%= notice %></p>

  <h1>Smartphones</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Picture</th>
        <th>Rate avg</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @smartphones.each do |smartphone| %>
      <tr>
        <td><%= smartphone.name %></td>
        <td><%= smartphone.category %></td>
        <td><%= smartphone.picture %></td>
        <td><%= smartphone.rate_AVG %></td>
        <td><%= link_to 'Show', smartphone %></td>
        <td><%= link_to 'Edit', edit_smartphone_path(smartphone) %></td>
        <td><%= link_to 'Destroy', smartphone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Smartphone', new_smartphone_path %>
</div>
<% end %>